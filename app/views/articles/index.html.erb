<div class="page-header"><h1>
  Listing all the articles
  
</h1>
</div>
<div class="container">
  

<p>
  <%= link_to "Create New Article", new_article_path, class:"btn btn-primary" %>
  
</p>
  
  
  <hr>

<table>
  <tr>
  <th>Title</th>
  <th>Description</th>
  </tr>
  
  <% @articles.each do |article| %>
  <tr class="my-std-row">
    <td><%= article.title%></td>
    <td><%= article.description%></td>
    <td><%= button_to "Edit", edit_article_path(article), class:"btn btn-default btn-sm"%></td>
    <td><%= button_to "Show", article_path(article), class:"btn btn-primary btn-sm"%></td>
    <td><%= button_to "Delete", article_path(article), method: :delete, data: {confirm: "Are you sure?"}, class:"btn btn-danger btn-sm"%></td>
  </tr>
  
  <% end %>
</table>
  </div>