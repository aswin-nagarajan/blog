


  <div class="jumbotron" style="margin-left:100px; margin-right:100px">
   <div class="container">



<%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>

<div class="form-group">

<div class="control-label col-sm-2">

<%= f.label :username %>

</div>

<div class="col-sm-8">

<%= f.text_field :username, class: "form-control", placeholder: "User Name", autofocus: true %>

</div>

</div>

<div class="form-group">

<div class="control-label col-sm-2">

<%= f.label :email %>

</div>

<div class="col-sm-8">

<%= f.text_field :email, rows: 10, class: "form-control", placeholder: "Email ID" %>

</div>
  
  </div>
<div class="form-group">  
<div class="control-label col-sm-2">

<%= f.label :password %>

</div>
  
 <div class="col-sm-8">

<%= f.text_field :password, rows: 10, class: "form-control", placeholder: "Password" %>

</div>
  
  </div>
<div class="form-group">
  <div class="control-label col-sm-2">

<%= f.label :password_confirmation %>

</div>
<div class="col-sm-8">

<%= f.text_field :password_confirmation, rows: 10, class: "form-control", placeholder: "Confrim Password" %>

</div>
  </div>
  
  


<div class="form-group">

<div class="col-sm-offset-2 col-sm-10">

<%= f.submit class: 'btn btn-primary btn-lg' %>
<button type="button" class="btn btn-danger btn-lg">
          Cancel
</button>

</div>

</div>

<% end %>

 
  </div>

</div>



